{
  "name": "uptc-ecoenergy",
  "version": "1.0.0",
  "description": "UPTC EcoEnergy - Sistema de Análisis Energético con IA",
  "scripts": {
    "deploy": "echo 'Push to GitHub and deploy via Dokploy'",
    "verify": "bash verify-deployment.sh",
    "logs": "docker-compose -f docker-compose.dokploy.yml logs -f",
    "stop": "docker-compose -f docker-compose.dokploy.yml down",
    "restart": "docker-compose -f docker-compose.dokploy.yml restart"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/uptc-ecoenergy.git"
  },
  "keywords": [
    "energy",
    "analytics",
    "fastapi",
    "nextjs",
    "timescaledb",
    "machine-learning"
  ],
  "author": "UPTC Team",
  "license": "MIT",
  "dokploy": {
    "build": {
      "type": "docker-compose",
      "file": "docker-compose.dokploy.yml"
    },
    "domains": [
      {
        "service": "frontend",
        "port": 3000
      },
      {
        "service": "backend", 
        "port": 8000
      }
    ]
  }
}
